{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: PDF Stitcher CLI",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/pdf_stitcher.py",
            "args": ["--help"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Run Examples",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/examples/usage_examples.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Run Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["tests/", "-v"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Debug Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}
